<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="well">
      <h1>Add New Contact</h1>
      <%= form_tag "/contacts", method: :post do %>
        <div class="form-group">First Name: <input type="text" name="first_name"></div>
        <div class="form-group">Middle Name: <input type="text" name="middle_name"></div>
        <div class="form-group">Last Name: <input type="text" name="last_name"></div>
        <div class="form-group">Email: <input type="text" name="email"></div>
        <div class="form-group">Phone Number: <input type="text" name="phone_number"></div>
        <div class="form-group">
          <div>Bio:</div>
          <div> <textarea name="bio" cols="30" rows="10"></textarea></div>
        <div class="form-group"><input type="submit" value="Create New Contact" class="btn btn-primary btn-md"> <a href="/contacts" class="btn btn-default btn-md">Cancel</a></div>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>